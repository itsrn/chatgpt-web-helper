{
  "manifest_version": 3,
  "name": "ChatGPT Web Helper",
  "version": "1.0.0",
  "description": "A lightweight chrome extension that lets you use ChatGPT with your text easily.",
  "icons": {
    "512": "images/logo.png"
  },
  "host_permissions": ["https://chat.openai.com/chat"],
  "permissions": ["contextMenus", "scripting", "storage"],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
